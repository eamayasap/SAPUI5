<mvc:View controllerName="logali.invoices.controller.Details"
          xmlns:mvc="sap.ui.core.mvc" 
          xmlns="sap.m"
          xmlns:core="sap.ui.core" 
          xmlns:logali="logali.invoices.control"
          displayBlock="true" >
    <Page id="IDDetailsPage1" 
          title="{i18n>DetailsPageTitle}" 
          showNavButton="true" 
          navButtonPress=".onNavBack" >
        <ObjectHeader id="IDDetailsHeader1" 
                      title="{northwind>Quantity} x {northwind>ProductName}"
                      responsive="true" 
                      fullScreenOptimized="true" >
            <attributes>
                <ObjectAttribute id="IDDetailsAttribute1" text="{northwind>ShipName}" />
                <ObjectAttribute id="IDDetailsAttribute2" text="{northwind>ShipAddress}" />
                <ObjectAttribute id="IDDetailsAttribute3" text="{northwind>ShipCity}" />
                <ObjectAttribute id="IDDetailsAttribute4" text="{northwind>ShipRegion}" />
                <ObjectAttribute id="IDDetailsAttribute5" text="{northwind>ShipPostalCode}" />
                <ObjectAttribute id="IDDetailsAttribute6" text="{northwind>ShipCountry}" />
                <ObjectAttribute id="IDDetailsAttribute7" text="{northwind>CustomerID}" />
                <ObjectAttribute id="IDDetailsAttribute8" text="{northwind>CustomerName}" />
            </attributes>
        </ObjectHeader>
        <logali:ProductRating id="rating" class="sapUiSmallMarginBeginEnd" change=".onRatingChange"/>
        <content>
            <HBox id="IDDetailsHBox1">
                <Label id="IDDetailsLabel1" labelFor="IDDetailsInput1" text="{i18n>DetailsLabelEmployee1}" class="sapUiSmallMargin" />
                <Input id="IDDetailsInput1" value="{jsonCountries>/employeeId}" maxLength="6" width="200px" class="sapUiSmallMarginEnd" />
                <Label id="IDDetailsLabel2" labelFor="IDDetailsSelect1" text="{i18n>LabelCountry}" class="sapUiSmallMargin" visible="true"/>
                <Select id="IDDetailsSelect1" selectedKey="{jsonCountries>/countryKey}" items="{jsonCountries>/listCountry}" 
                        forceSelection="false" visible="true" >
                    <items>
                        <core:Item id="IDDetailsItem1" key="{jsonCountries>key}" text="{jsonCountries>text}" />
                    </items>
                </Select>
                <Button id="IDDetailsButton1" text="Filter" icon="sap-icon://search" press="onFilter" class="sapUiSmallMarginEnd" />
                <Button id="IDDetailsButton2" text="Clear Filter" icon="sap-icon://clear-filter" press="onClearFilter" class="sapUiSmallMarginEnd" />
            </HBox>
            <Panel id="IDDetailsPanel1" >
                <Button id="IDbtnShowCity" text="Show City" 
                        visible="{JSONModelConfig>/visibleIDbtnShowCity}" press="onShowCity" class="sapUiSmallMarginEnd" />
                <Button id="IDbtnHideCity" text="Hide City" 
                        visible="{JSONModelConfig>/visibleIDbtnHideCity}" press="onHideCity" class="sapUiSmallMarginEnd" />
                <Table id="IDDetailsTable1" items="{jsonEmployees>/employees}" >
                    <columns>
                        <Column id="IDDetailsColumn1" visible="{JSONModelConfig>/visibleID}" > 
                            <header> <Label id="IDDetailsLabel10" text="ID" /> </header> 
                        </Column>
                        <Column id="IDDetailsColumn2" visible="{JSONModelConfig>/visibleName}" > 
                            <header> <Label id="IDDetailsLabel11" text="Name"  /> </header> 
                        </Column>
                        <Column id="IDDetailsColumn3" visible="{JSONModelConfig>/visibleCountry}" > 
                            <header> <Label id="IDDetailsLabel12" text="Country" />  </header> 
                        </Column>
                        <Column id="IDDetailsColumn4" visible="{JSONModelConfig>/visibleCity}" > 
                            <header> <Label id="IDDetailsLabel13" text="City"  />  </header> 
                        </Column>
                        <Column id="IDDetailsColumn5" > 
                            <header> <Label id="IDDetailsLabel18" text="Show Details"  />  </header> 
                        </Column>
                    </columns>
                    <items> 
                        <!-- <ColumnListItem id="IDDetailsList1" type="Active" press="onShowPostalCode" > -->
                        <ColumnListItem id="IDDetailsList1" press="onShowOrders" >
                            <cells>
                                <Label id="IDDetailsLabel14" text="{jsonEmployees>employeeID}" />
                                <Label id="IDDetailsLabel15" text="{jsonEmployees>LastName}/{jsonEmployees>FirstName}" />
                                <Label id="IDDetailsLabel16" text="{jsonEmployees>Country}" />
                                <Label id="IDDetailsLabel17" text="{jsonEmployees>City}" />
                                <core:Icon id="IDDetailsicon1" src="sap-icon://show" press="onShowOrders" />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
                <HBox id="ordersTable" >
                </HBox>
            </Panel>
        </content>
    </Page>
</mvc:View>