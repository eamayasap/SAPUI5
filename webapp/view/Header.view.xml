<mvc:View controllerName="logali.invoices.controller.Header"
          xmlns:l="sap.ui.layout"
          xmlns:mvc="sap.ui.core.mvc" 
          xmlns="sap.m" 
          xmlns:core="sap.ui.core" 
          displayBlock="true" >
   <Page id="IDPage1" >
        <Panel id="IDAppViewPanel1" 
                headerText="{i18n>HeaderViewPanel1}" 
                class="sapUiResponsiveMargin" 
                width="auto" 
                expandable="{device>/system/phone}"
                expanded="{= !${device>/system/phone}}" >
                <content>
                        <Button id="IDHeaderViewButton1" text="{i18n>HeaderViewButton1}" icon="sap-icon://accept"
                                press=".onShowHello" class="sapUiSmallMarginEnd" />
                        <Button id="IDHeaderViewButton2" text="{i18n>HeaderViewButton2}"  icon="sap-icon://action"
                                press=".onOpenDialog" class="sapUiSmallMarginEnd" />
                        <Input id="IDHeaderViewInput1" value="{/recipient/name}" valueLiveUpdate="true" width="20%" />
                        <Text id="IDHeaderViewText1" text="Hello {/recipient/name}"  class="boldElements" ></Text>
                        <VBox id="IDHeaderViewButtonVBox">
                                <Button id="IDHeaderViewButtonListTypes" text="{i18n>HeaderViewButton3}" icon="sap-icon://accelerated"
                                        press=".onShowListTypes" class="sapUiSmallMarginEnd" >  </Button>
                        </VBox>
                </content>
        </Panel> 
        <core:Fragment fragmentName="logali.invoices.Fragments.Fragment" type="XML" />
    </Page>
</mvc:View>